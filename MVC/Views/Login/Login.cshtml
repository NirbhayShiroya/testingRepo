@using Repositories
@model vm_login
@{
    ViewData["Title"] = "Login Page";
}
<div class="container mt-5" style="border: 1px solid #ccc; width: 70%;padding:20px">
    <h3>Login</h3>
    <br />
    
    <form asp-controlle="Login" asp-action="Login" method="post">
        <div class="mt-3">
            <label class="control-label mt-1" for="email">Email:</label>
            <div class="mt-1">
                <input type="email" class="form-control" asp-for="Email" id="email" placeholder="Enter email">
            </div>
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div class="mt-3">
            <label class="control-label mt-1" for="pwd">Password:</label>
            <div class="mt-1">
                <input type="password" class="form-control" asp-for="Password" id="pwd" placeholder="Enter password">
            </div>
            <span class="text-danger" asp-validation-for="Password"></span>
        </div>
        <div id="responseMessage" class="mt-3">
            <div class="alert @(ViewData["message"] != null ? "alert-danger" : "")">
                @ViewData["Message"]
            </div>
        </div>
        <div class="mt-3">
            <div class="mt-1">
                <button type="submit" id="login" class="btn btn-primary">Login</button>
            </div>
        </div>
    </form>
    <a asp-action="Register">Don't have an Account?</a>

</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}